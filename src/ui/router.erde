local home = require('ui.pages.home')
local game = require('ui.pages.game')

local router = {
  page = game,
  path = '/',
  routes = {
    ['/'] = home,
    ['/game'] = game,
  },
}

function router:load() {}

function router:update(dt) {
  if self.routes[self.path] ~= self.page {
    self.page = self.routes[self.path]
    self.page:load()
  }

  self.page:update(dt)
}

function router:draw() {
  self.page:draw()
}

return router
