local { eventListeners } = require('events')
local ui = require('ui')

function love.load() {
  ui:load()
}

function love.update(dt) {
  ui:update(dt)
}

function love.draw() {
  ui:draw()
}

for event, listeners in pairs(eventListeners) {
  love[event] = (...) -> {
    for id, listener in pairs(listeners) {
      listener(...)
    }
  }
}
